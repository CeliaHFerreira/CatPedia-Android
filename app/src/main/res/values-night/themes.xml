<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CatPedia" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_bright</item>
        <item name="colorPrimaryVariant">@color/pink_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_light</item>
        <item name="colorSecondaryVariant">@color/brown_bright</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Buttons -->
    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">@dimen/padding_8</item>
    </style>

    <style name="DefaultButton.Primary">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultButton.Secondary">
        <item name="android:background">@drawable/button_rounded_border</item>
        <item name="android:textColor">@color/dark_pink</item>
    </style>

    <style name="DefaultButton.Alternative">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/grey_dark_text</item>
    </style>

    <!-- EditText -->
    <style name="DefaultEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/grey_dark_text</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:drawableTint">@color/grey_dark_text</item>
        <item name="android:textColor">@color/grey_dark_text</item>
        <item name="android:textColorHint">@color/grey_dark_text</item>
        <item name="android:ems">10</item>
    </style>

    <!-- TextView -->
    <style name="TextViewTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewTitle.Subtitle">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:layout_marginBottom">@dimen/margin_6</item>
    </style>
</resources>